# Minimal Nginx configuration for DonorIQ Backend API
# Place in /etc/nginx/sites-available/mtf-backend
# Enable: sudo ln -s /etc/nginx/sites-available/mtf-backend /etc/nginx/sites-enabled/
# Test: sudo nginx -t && sudo systemctl reload nginx

upstream donoriq_backend {
    server 127.0.0.1:8000;
}

server {
    listen 80;
    server_name diqdev-be.mtf.org www.diqdev-be.mtf.org;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    
    server_name diqdev-be.mtf.org www.diqdev-be.mtf.org;
    
    ssl_certificate /etc/ssl/mtf/mtf_org.crt;
    ssl_certificate_key /etc/ssl/mtf/mtf_org.pem;
    
    # File upload size (500MB)
    client_max_body_size 512M;
    
    # Timeouts for long document processing
    proxy_read_timeout 300s;
    proxy_connect_timeout 300s;
    proxy_send_timeout 300s;
    
    location / {
        proxy_pass http://donoriq_backend;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        
        # HTTP version for better performance
        proxy_http_version 1.1;
    }
}
