# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/donoriq_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONTAINER_NAME=documents

# Azure OpenAI Configuration
OPENAI_API_KEY=your-azure-openai-api-key
OPENAI_API_BASE=https://your-resource-name.openai.azure.com/
OPENAI_API_VERSION=2023-07-01-preview
AZURE_OPENAI_CHAT_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
AZURE_OPENAI_EMBEDDING_API_VERSION=2023-05-15

# Legacy OpenAI Configuration (can be removed)
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_SUMMARIZATION_MODEL=gpt-3.5-turbo

# Application Settings
DEBUG=false
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE_MB=500
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Production Settings
PORT=8000
WORKERS=4

# Background Worker Configuration
WORKER_ENABLED=true
WORKER_POLL_INTERVAL=5
WORKER_MAX_CONCURRENT=1
WORKER_MAX_RETRIES=3
WORKER_DOCUMENT_DELAY_SECONDS=120
WORKER_DOCUMENT_TIMEOUT_SECONDS=1800
